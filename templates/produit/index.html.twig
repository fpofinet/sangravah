                            <td>{{produit.description}}</td>
                            <td>{{produit.prix}}</td>
                            <td>{{produit.quantite}}</td>
                            <td>{{produit.categorie.libelle}}</td>
                            <td><a href={{path("details",{'id':produit.id})}} class="btn btn-outline-dark">details</a></td>
                            <td><a href={{path("update_produit",{'id':produit.id})}} class="btn btn-outline-success">Modifier</a></td>
                            <td><a href={{path("delete_produit",{'id':produit.id})}} class="btn btn-outline-danger">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
