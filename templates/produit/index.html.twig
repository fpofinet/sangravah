                        <th>DESCRIPTION</th>
                        <th>PRIX</th>
                        <th>STOCK</th>
                        <th>CATEGORIE</th>  
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{produit.id}}</td>
                            <td>{{produit.reference}}</td>
