{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<section class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto mt-5">
            <table class="table table-striped">
                <thead>
                    <tr>
